/* 商品盒子 */

.content_box {
  background: #fff;
  display: flex;
  justify-content: space-between;
  margin: 32rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.content_box .box_left {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.content_box .box_right {
  position: relative;
  width: 446rpx;
}

.box_rightjs text {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 28rpx;
  color: rgba(241, 64, 75, 1);
  padding: 6rpx 20rpx;
  background: rgba(255, 241, 241, 1);
  border-radius: 20rpx;
}

.content_box .box_right .box_top {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
}

.content_box .box_right .box_bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.content_box .box_right .box_bottom view {
  display: inline-block;
}

.content_box .box_right .box_bottom .price {
  color: #f1404b;
  font-size: 28rpx;
}

.content_box .box_right .box_bottom .address {
  color: #999;
  font-size: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 60%;
  text-align: right;
}

.headerLineSel {
  color: #333;
  font-weight: 500;
  position: relative;
}

.headerLineSel:after {
  position: absolute;
  bottom: -18rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 40rpx;
  height: 8rpx;
  background-color: #f1404b;
  content: '';
  border-radius: 8rpx;
}

.headerLineUnsel {
  color: #999;
  font-weight: 400;
}

.filter-tab:after {
  content: '';
  display: inline-block;
  vertical-align: 4rpx;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid #bbb;
  margin-left: 8rpx;
}

.filter-up:after {
  content: '';
  display: inline-block;
  vertical-align: 4rpx;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  margin-left: 8rpx;
  border-top: 0;
  border-bottom: 12rpx solid #bbb;
}

.empty_img {
  width: 274rpx;
  height: 274rpx;
  margin: 0 auto;
}

.empty {
  text-align: center;
  color: #333;
  font-size: 32rpx;
}

.filter-shadow {
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.5);
}

