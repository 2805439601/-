  background: #fff;
  padding: 32rpx;
}

.search_inp {
  font-size: 12px;
  background: #f8f8f8;
  opacity: 0.7;
  border: 1px solid rgb(238, 238, 238);
  width: 100%;
  /* padding-left: 314rpx; */
