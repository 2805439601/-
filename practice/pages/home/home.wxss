/* pages/cart/cart.wxss */
image {
  width: 100%;
  height: 100%;
}
.isBg {
  background-color: #ff4546;
}
.search {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999999;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  box-sizing: border-box;
}
.search .search_box {
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.search .search_box .search_icon {
  height: 29rpx;
  width: 29rpx;
  left: 40rpx;
  display: block;
  position: absolute;
}
.search .search_box .search_inp {
  background: rgba(255, 255, 255, 0.6);
  border: 1px solid #eeeeee;
  box-shadow: 2px 2px 12px rgba(153, 153, 153, 0.4);
  width: 100%;
  text-align: left;
  border-radius: 40rpx;
  padding-left: 80rpx;
  height: 64rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  display: flex;
  align-items: center;
}
/* 轮播图 */
.swiper {
  height: 576rpx;
}
.mell {
  width: 100%;
  height: 160rpx;
  margin: 40rpx 0 40rpx 0;
}
.Class {
  display: flex;
  align-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.Class .classList {
  width: 20%;
  display: flex;
  /* align-items: center;
        flex-direction: column;
        */
  justify-content: center;
  flex-wrap: wrap;
}
.Class .classList image {
  width: 92rpx;
  height: 92rpx;
}
.Class .classList text {
  text-align: center;
  width: 100%;
  display: block;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  font-size: 24rpx;
  color: #666;
}
.layoutOut {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.layoutOut text {
  width: 100%;
  text-align: center;
  padding-bottom: 22rpx;
}
.layoutOut .layoutIn {
  display: flex;
  height: 300rpx;
  width: 46%;
  margin-right: 10rpx;
}
.layoutOut .layoutIn:nth-of-type(2n) {
  margin-right: 0;
}
.layoutOut .layoutIn image {
  width: 100%;
  display: block;
  border-radius: 5px;
}
.guess {
  display: flex;
  flex-wrap: wrap;
}
.guess .guess_title {
  width: 100%;
  text-align: center;
  padding: 38rpx 0;
}
.guess .guess_con {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  width: 46%;
  margin-right: 10rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.guess .guess_con:nth-of-type(2n) {
  margin-right: 0;
}
.guess .guess_con .guess_img {
  width: 300rpx;
  height: 300rpx;
}
.guess .guess_con .guess_price {
  color: #f1505b;
  width: 100%;
}
.guess .guess_con .guess_tro {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding: 10rpx 0rpx;
}
