/* pages/cart/cart.wxss */
image {
  width: 100%;
  height: 100%;
}
.isBg {
  background-color: #ff4546;
}
.search {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999999;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  box-sizing: border-box;
}
.search .search_box {
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.search .search_box .search_icon {
  height: 29rpx;
  width: 29rpx;
  left: 40rpx;
  display: block;
  position: absolute;
}
.search .search_box .search_inp {
  background: rgba(255, 255, 255, 0.6);
  border: 1px solid #eeeeee;
  box-shadow: 2px 2px 12px rgba(153, 153, 153, 0.4);
  width: 100%;
  text-align: left;
  border-radius: 40rpx;
  padding-left: 80rpx;
  height: 64rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  display: flex;
  align-items: center;
}
/* 轮播图 */
.swiper {
  height: 576rpx;
}
.mell {
  width: 100%;
  height: 160rpx;
  margin: 40rpx 0 40rpx 0;
}
