/* pages/search/search.wxss */

page {
    height: 100%;
    background: rgba(255, 255, 255, 1);
}

image {
    width: 100%;
    height: 100%;
}

.search {
    width: 100%;
    padding: 20rpx 32rpx 32rpx 32rpx;
    box-sizing: border-box;
    font-family: PingFang SC;
}

.search_top {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 32rpx;
}

.search_tleft {
    width: 598rpx;
    position: relative;
}

.search_inp {
    background: rgba(244, 244, 244, 1);
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 300;
    line-height: 40rpx;
    color: #333;
    padding: 12rpx 0 12rpx 80rpx;
}

.search_tright {
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
    color: rgba(102, 102, 102, 1);
}

.search_img {
    width: 29rpx;
    height: 29rpx;
    position: absolute;
    top: 13rpx;
    left: 40rpx;
}

.search_bottom {
    width: 100%;
    padding-bottom: 16rpx;
}

.search_ba {
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.search_bd {
    font-size: 28rpx;
    font-weight: 500;
    line-height: 40rpx;
    color: rgba(102, 102, 102, 1);
}

.search_baimg {
    width: 40rpx;
    height: 40rpx;
}

.search_bb {
    display: flex;
    flex-wrap: wrap;
    margin-top: 32rpx;
}

.nh {
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
    color: rgba(102, 102, 102, 1);
    padding: 12rpx 32rpx;
    background: rgba(248, 248, 248, 1);
    border-radius: 40rpx;
    margin-right: 20rpx;
    margin-bottom: 24rpx;
}

.search_sc {
    width: 60rpx;
    height: 40rpx;
    position: absolute;
    top: 12rpx;
    right: 0rpx;
    z-index: 33;
}

.search_sc image {
    width: 30rpx;
    height: 30rpx;
}

.search_history {
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
    color: rgba(153, 153, 153, 1);
}