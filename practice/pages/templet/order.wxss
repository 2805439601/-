.logistics{
  width: 100%;
  padding: 36rpx 32rpx 0 32rpx;
  box-sizing: border-box;
  text-align: center;
}
image{
  width: 100%;
  height: 100%;
}
.log_time{
  font-size:24rpx;
  font-weight:400;
  line-height:34rpx;
  color:rgba(248,248,248,1);
  background:rgba(213,213,213,.7);
  border-radius:8rpx;
  display: inline-block;
  padding: 6rpx 20rpx 8rpx 20rpx;
}
.log_event{
  width: 100%;
  margin-top: 36rpx;
  padding: 26rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  border-radius:20rpx;
}
.log_ea{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.log_ea view:nth-child(1){
  font-size:32rpx;
  font-weight:500;
  line-height:44rpx;
  color:rgba(51,51,51,1);
}
.log_ea view:nth-child(2){
  font-size:24rpx;
  font-weight:400;
  line-height:34rpx;
  color:rgba(153,153,153,1);
}
.log_eb{
  width: 100%;
  display: flex;
  margin-top: 24rpx;
  background:rgba(248,248,248,1);
}
.log_ebimg{
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-image: url(http://test.api.meibohate.com/images/square.png);
  background-size: cover;
}
.log_ebtext{
  width: 486rpx;
  box-sizing: border-box;
  padding: 22rpx 38rpx 12rpx 16rpx;
  text-align: left;
}
.log_ebtext view:nth-child(1){
  width: 432rpx;
  font-size:24rpx;
  font-weight:400;
  line-height:34rpx;
  color:rgba(51,51,51,1);
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.log_ebtext view:nth-child(2){
  font-size:20rpx;
  font-weight:400;
  line-height:28rpx;
  color:rgba(153,153,153,1);
  margin-top: 27rpx;
}
.hd{
  display: inline-block;
  width:12rpx;
  height:12rpx;
  background:rgba(241,64,75,1);
  border-radius:50%;
  margin-left: 8rpx;
  position: relative;
  top: -5rpx;
}
.jy_scroll{
	box-sizing: border-box; 
	height: 100%;
	position: fixed;
	overflow: hidden;
  padding-top: 94rpx;
}
.non{
  width: 100%;
  padding-top: 234rpx;
  text-align: center;
}
.no_img{
  width: 280rpx;
  height: 239rpx;
  margin-left: 242rpx;
}
.no_text{
  padding-top: 32rpx;
  font-size:32rpx;
  font-weight:400;
  line-height:44rpx;
  color:rgba(153,153,153,1);
}





