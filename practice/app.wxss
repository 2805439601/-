.custom{
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  height: 45px;
  background: #fff;
  z-index: 999;
}

.empty_custom{
  height: 45px;
  width: 100%;
}
.isActive{
  opacity: .5;
  pointer-events: none;
}
.active{
  opacity: 1;
}


.weui-loadmore {
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  margin-top: 30rpx;
}

.weui-loading {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore-tips {
  display: inline-block;
  vertical-align: middle;
}
/* 模态框 */
.hui{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(51, 51, 51,.7);
  z-index: 9999999;
}
.tan{
  width: 600rpx;
  height: 322rpx;
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -300rpx;
  margin-top: -160rpx;
}
.tan_text{
  font-size:32rpx;
  font-weight:400;
  line-height:44rpx;
  color:rgba(102,102,102,1);
  text-align: center;
  /* padding: 68rpx 0 90rpx 0; */
padding: 68rpx 28rpx 46rpx 60rpx;

}
.tan view{
  display: flex;
  justify-content: space-around;
}
.tan button{
  display: inline-block;
  font-size:32rpx;
  font-weight:400;
  line-height:44rpx;
  padding: 18rpx 60rpx;
  border-radius:40rpx;
}
.tan_no{
  border:1px solid rgba(153,153,153,1);
  color:rgba(102,102,102,1);
  background: none;
}
.tan_yes{
  background:linear-gradient(90deg,rgba(255,93,105,1) 0%,rgba(240,64,74,1) 100%,rgba(147,39,46,1) 100%,rgba(121,32,38,1) 100%);
  color:rgba(255,255,255,1);
}
