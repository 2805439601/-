.self {
	text-align: right;
}

.self .tou {
	float: right;
	margin: 0 0 0 20rpx;
}

.user {
	position: relative;
	bottom: -30rpx;
}

.self .msg {
	background-color: #0873DE;
	color: #fff;
}

.self .msg:before {
	right: inherit;
	left: 100%;
	border-right-color: transparent;
	border-left-color: #b2e281;
}

.template {
	display: inline;
}
.err{
	width: 32rpx;
	height: 32rpx;
	position: absolute;
	left: -40rpx;
}
.hide{
	display: none;
}
.show{
	display: block;
}
.product{
  margin: 30rpx 30rpx 0 30rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}
.product_img{
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background-image: url(http://test.api.meibohate.com/images/square.png);
  background-size: cover;
  overflow: hidden;
}
.product_img image{
  width: 100%;
  height: 100%;
}
.product_right{
  width: 450rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:rgba(51,51,51,1);
  position: relative;
}
button::after{
  border: none;
}
.product_right view{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.product_right button{
  display: inline-block;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:34rpx;
  color:rgba(255,255,255,1);
  background:rgba(241,64,75,1);
  border-radius:26rpx;
  padding: 10rpx 16rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}
.productMsg{
  width: 488rpx;
  background: #fff;

}
.productMsg_img{
